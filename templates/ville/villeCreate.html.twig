        <div class="col-md-4 mx-auto">
            <div class="text-center ">
                <h2 class="h2 mb-3 font-weight-normal">{{ controller_name }}</h2>
            </div>
            {{ form_start(villeCreateForm) }}
            <div class="form-group">
                {{ form_row(villeCreateForm.nom) }}
            </div>
            <div class="form-group">
                {{ form_row(villeCreateForm.codePostal) }}
            </div>
            <div class="form-group">
                {{ form_row(villeCreateForm.submit) }}
            </div>
            {{ form_end(villeCreateForm) }}
        </div>
    </div>
{% endblock %}
