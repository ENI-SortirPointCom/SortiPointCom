{% extends 'base.html.twig' %}

{% block title %}{{ controller_name }}{% endblock %}

{% block body %}
    {% form_theme sortieFilterForm 'bootstrap_4_horizontal_layout.html.twig' %}
    <div class="container">
        {{ form_start((sortieFilterForm)) }}
        <div class="form-group">
            <div class="form-row">
                <div class="col-md-8">
                    {{ form_row(sortieFilterForm.nomSearch) }}
                    {{ form_row(sortieFilterForm.siteSortie) }}
                    {{ form_row(sortieFilterForm.dateDebut) }}
                    {{ form_row(sortieFilterForm.dateFin) }}
                </div>
                <div class="col-md-4 ">
                    {{ form_row(sortieFilterForm.organisateur) }}
                    {{ form_row(sortieFilterForm.passe) }}
                    <div class="form-group d-flex justify-content-end">
                        {{ form_label(sortieFilterForm.etatInscrit) }}
                        {{ form_widget(sortieFilterForm.etatInscrit) }}
                    </div>
                    {{ form_row(sortieFilterForm.Rechercher) }}
                </div>
            </div>
        </div>
        {{ form_end(sortieFilterForm) }}
    </div>

    {% set nowDate = date('now') %}
    <div class="d-flex align-self-center p-2" style="margin-top:30px">
        <table class="table table-striped table-bordered">
            <thead>
            <tr class="text-center">
                <th scope="col">Nom de la sortie</th>
                <th scope="col">Date de la sortie</th>
                <th scope="col">Cl√¥ture</th>
                <th scope="col">nb Inscrits/places</th>
                <th scope="col">Etat</th>
                <th scope="col">Status</th>
                <th scope="col">Organisateur</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for sortie in sorties %}
                <tr class="text-center">
                    <td>{{ sortie.nom }}</td>
                    <td>{{ sortie.dateHeureDebut | date("Y-d-m H:m:i") }}</td>
                    <td>{{ sortie.dateLimitInscription | date("Y-d-m") }}</td>
                    <td><a href="{{ path('profils_show',{ id:sortie.id} )}}">{{ sortie|nbParticipant() }}</a>/{{ sortie.nbInscriptionMax }}</td>
                    <td>{{ sortie.etat|default('undefinned') }}</td>
                    <td>{{ sortie|inscrit(user)|raw }}</td>
                    <td>{{ sortie.organisateur }}</td>
                    <td>{{ sortie|actions(user)|join|raw }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
{% endblock %}
