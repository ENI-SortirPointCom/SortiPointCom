{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    {% set nowDate = date('now') %}
    <div class="container" style="margin-top:30px">
        <table class="table table-striped table-bordered">
            <thead>
            <tr align="center">
                <th scope="col">Nom de la sortie</th>
                <th scope="col">Date de la sortie</th>
                <th scope="col">Cl√¥ture</th>
                <th scope="col">nb Inscris/place</th>
                <th scope="col">Etat</th>
                <th scope="col">Inscris</th>
                <th scope="col">Organisateur</th>
                <th scope="col">Actions</th>
                {#                <th scope="col">#}
                {#                    <button class="btn fas fa-sort-amount-up"></button>#}
                {#                    <button class="btn fas fa-sort-amount-down "></button>#}

            </tr>
            </thead>
            <tbody>
            {% for sortie in sorties %}
                <tr align="center">
                    <td>{{ sortie.nom }}</td>
                    <td>{{ sortie.dateHeureDebut | date("Y-d-m H:m:i") }}</td>
                    <td>{{ sortie.dateLimitInscription | date("Y-d-m") }}</td>
                    <td>{{ sortie|nbParticipant() }}/{{ sortie.nbInscriptionMax }}</td>
                    <td>{{ sortie.etat|default('undefinned') }}</td>
                    <td>{{ sortie|present(user) }}</td>
                    <td>{{ sortie.organisateur }}</td>
                    <td>{{ sortie|actions|join|raw }}</td>
                </tr>
            {% endfor %}
            </tbody>

        </table>

    </div>
{% endblock %}
