{% extends 'base.html.twig' %}

{% block title %}{{controller_name}}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="text-center ">
                <h2 class="h2 mb-3 font-weight-normal">{{ controller_name }}</h2>
            </div>
            {{ form_start(lieuCreateForm) }}
            <div class="form-group">
                {{ form_row(lieuCreateForm.nom) }}
            </div>
            <div class="form-group">
                {{ form_row(lieuCreateForm.rue) }}
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        {{ form_row(lieuCreateForm.longitude) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(lieuCreateForm.lattitude) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                {{ form_row(lieuCreateForm.ville) }}
            </div>
            <button class=" btn btn-success btn-block send-button tx-tfm" type="submit">Valider</button>
            {{ form_end(lieuCreateForm) }}
        </div>
    </div>
{% endblock %}
