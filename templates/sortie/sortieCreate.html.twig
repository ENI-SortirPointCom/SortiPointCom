{% extends 'base.html.twig' %}

{% block title %}{{ controller_name }}{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="text-center ">
                <h2 class="h2 mb-3 font-weight-normal">{{ controller_name }}</h2>
            </div>
            {{ form_start(sortieCreateForm) }}
            <div class="form-group">
                {{ form_row(sortieCreateForm.nom) }}
            </div>
            <div class="row">
                <div class="form-group">
                    <div class="input-group date" id="datetimepicker7" data-target-input="nearest">
                        {{ form_row(sortieCreateForm.dateHeureDebut) }}
                        <div class="input-group-append" data-target="#datetimepicker7" data-toggle="datetimepicker">
                            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group date" id="datetimepicker7" data-target-input="nearest">
                        {{ form_row(sortieCreateForm.heureFin) }}
                        <div class="input-group-append" data-target="#datetimepicker7" data-toggle="datetimepicker">
                            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="input-group date" id="datetimepicker7" data-target-input="nearest">
                    {{ form_row(sortieCreateForm.dateLimitInscription) }}
                    <div class="input-group-append" data-target="#datetimepicker7" data-toggle="datetimepicker">
                        <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                {{ form_row(sortieCreateForm.nbInscriptionMax) }}
            </div>
            <div class="form-group">
                {{ form_row(sortieCreateForm.infosSortie) }}
            </div>
            <div class="form-group">
                {{ form_row(sortieCreateForm.etat) }}
            </div>
            <div class="form-group">
                {{ form_row(sortieCreateForm.lieu) }}
            </div>
            <button class=" btn btn-success btn-block send-button tx-tfm" type="submit">Valider</button>
            {{ form_end(sortieCreateForm) }}
        </div>
    </div>
{% endblock %}