{% extends 'base.html.twig' %}

{% block title %}{{ controller_name }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="text-center ">
                <h2 class="h2 mb-3 font-weight-normal">{{ controller_name }}</h2>
            </div>
            {{ form_start(sortieCreateForm) }}
            <div class="form-group">
                {{ form_row(sortieCreateForm.nom) }}
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-8">
                        {{ form_row(sortieCreateForm.lieu) }}
                    </div>
                    <div class="col-md-4">
                        <div class="form-group"><br>
                            <a class="btn btn-info btn-block send-button tx-tfm" href="{{ path('lieu_create') }}">Ajouter
                                un lieu</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        {{ form_row(sortieCreateForm.dateHeureDebut) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(sortieCreateForm.heureFin) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        {{ form_row(sortieCreateForm.dateLimitInscription) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(sortieCreateForm.nbInscriptionMax) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                {{ form_row(sortieCreateForm.infosSortie) }}
            </div>
            <div class="form-group">
                {{ form_row(sortieCreateForm.participate) }}
            </div>
            <div class="form-group">
                {{ form_row(sortieCreateForm.submit) }}
            </div>
            {{ form_end(sortieCreateForm) }}
        </div>
    </div>
{% endblock %}