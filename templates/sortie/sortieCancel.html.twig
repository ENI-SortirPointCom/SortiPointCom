{% extends 'base.html.twig' %}



{% block body %}
    {% form_theme sortieCancel 'bootstrap_4_horizontal_layout.html.twig' %}
    <div class="container">

        <div class="col-md-4 mx-auto">
            <div class="text-center ">
                <h2 class="h2 mb-3 font-weight-normal">{{ controller_name }} {{ sortie.nom }}</h2>
            </div>
        </div>
        {{ form_start(sortieCancel) }}
        <div class="form-group">
            {{ form_row(sortieCancel.nom) }}
            {{ form_row(sortieCancel.dateHeureDebut) }}
            {{ form_row(sortieCancel.dateLimitInscription) }}
            {{ form_row(sortieCancel.lieu) }}
            {{ form_row(sortieCancel.site) }}
            {{ form_row(sortieCancel.infosSortie) }}
        </div>
        <div class="form-group text-right">
            <button class=" btn btn-danger  btn-outline send-button tx-tfm" type="submit">Annuler</button>
            <button class=" btn btn-success btn-outline send-button tx-tfm" type="submit"><a href="{{ path('sortie_cancel',{'id':sortie.id}) }}">Valider</a></button>
        </div>
        {{ form_end(sortieCancel) }}
    </div>
{% endblock %}